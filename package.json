{
  "name": "electron-react-typescript-starter",
  "version": "0.4.0",
  "private": true,
  "main": "electron/main.ts",
  "homepage": "./",
  "scripts": {
    "react:start": "cross-env BROWSER=none cross-env PORT=3333 react-scripts start",
    "react:build": "react-scripts build",
    "react:test": "react-scripts test",
    "react:eject": "react-scripts eject",
    "electron:start": "wait-on http://localhost:3333 && cross-env NODE_ENV=development electron-webpack dev",
    "electron:build": "cross-env NODE_ENV=production && electron-webpack",
    "package": "electron-builder build --win --ia32",
    "package:build": "yarn react:build && yarn electron:build && yarn package",
    "lint": "eslint ./**/*.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "@reduxjs/toolkit": "^1.5.1",
    "axios": "^0.21.1",
    "babel-loader": "8.1.0",
    "electron-is-dev": "2.0.0",
    "electron-log": "^4.3.5",
    "electron-updater": "^4.3.9",
    "nanoid": "^3.1.23",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.16.0",
    "react-redux": "^7.2.4",
    "react-scripts": "^4.0.3",
    "redux": "^4.1.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.8",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "concurrently": "6.1.0",
    "cross-env": "7.0.3",
    "electron": "^12.0.7",
    "electron-builder": "^22.11.3",
    "electron-webpack": "2.8.2",
    "electron-webpack-ts": "4.0.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "javascript-obfuscator": "^2.12.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "tslint": "6.1.3",
    "wait-on": "5.3.0",
    "webpack": "4.44.2",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-obfuscator": "^2.6.0"
  },
  "build": {
    "appId": "com.test.electron-react-template",
    "productName": "electron-react-template",
    "copyright": "Copyright Â©2021",
    "extends": null,
    "asar": true,
    "directories": {
      "output": "./package/"
    },
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "files": [
      "build/**/*",
      "dist/**/*",
      "!**/*.map"
    ],
    "publish": [],
    "target": "nsis"
  },
  "electronWebpack": {
    "main": {
      "extraEntries": [
        "@/preload.js"
      ],
      "sourceDirectory": "electron",
      "webpackConfig": "webpack.main.js"
    },
    "renderer": null
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "electron/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
